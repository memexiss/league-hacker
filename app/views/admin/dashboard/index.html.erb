<%= render "layouts/sidebar" %>
<main class="py-10 lg:pl-72">
  <div class="px-4 sm:px-6 lg:px-8">
    <h1 class="text-gray-700 font-lg text-center mx-auto font-bold">Dashboard<h1>
  </div>
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center">
    </div>
    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <table class="min-w-full divide-y divide-gray-300">
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= link_to "Users", admin_users_path %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"> <%= User.count %> </td>

                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                </td>
              </tr>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= link_to "Leagues", admin_leagues_path %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"> <%= League.count %> </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                </td>
              </tr>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= link_to "Golf Courses", admin_golf_courses_path %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"> <%= GolfCourse.count %></td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</main>
