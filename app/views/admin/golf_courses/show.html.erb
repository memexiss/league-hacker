<%= render "layouts/sidebar" %>
<main class="py-10 lg:pl-72 pl-4 mx-auto">
  <div class='px-10 lg:px-20'>
    <h1 class='text-2xl'><%= @course.name %>
      <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-600 ring-1 ring-inset ring-blue-500/10"><%= pluralize(@course.number_of_holes, 'Hole') %> </span>
    </h1>
    <h3 class='text-lg'> <%= @course.address %> <%= @course.city %> <%= @course.state %> <%= @course.zip %></h3>

    <div class='flex justify-center gap-1 5 break-all mt-4'>
      <section class='w-2/3'>
        <h3 class='text-lg'><%= pluralize @course.holes.count, "Hole" %></h3>
        <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <% @course.holes.each do |hole|%>
          <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
            <div class="flex min-w-0 gap-x-4">
              <h1 class="text-3xl"><%= hole.hole %></h1>
              <%# <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt=""> %>
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-semibold leading-6 text-gray-900">
                  <span class="inset-x-0 -top-px bottom-0"></span>
                  Par <%= hole.par %>
                </p>
                <% if hole.tees.present?%>
                  <% hole.tees.each do |tee| %>
                    <span class="inline-flex items-center rounded-full bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10"><%= tee.color%> - <%= tee.yards%> Yards</span>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="flex shrink-0 items-center gap-x-4">
              <div class="hidden sm:flex sm:flex-col sm:items-end">
                <p class="text-sm leading-6 text-gray-900">Handicap: <%= hole.handicap %></p>
              </div>
              <%= link_to edit_admin_golf_course_hole_path(hole) do %>
                <div class="sm:flex sm:flex-col sm:items-end">
                  <p class="text-sm leading-6 text-gray-900">Edit</p>
                </div>          
              <% end %>
              <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
              </svg>
            </div>
          </li>
          <% end %>
          
        </ul>
      </section>

      <section class='w-1/3'>
        <h3 class='text-lg'><%= pluralize @course.tee_boxes.count, "Tee Box" %></h3>
        <ul role="list" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
          <% @course.tee_boxes.each do |tee_box|%>
          <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
            <div class="flex min-w-0 gap-x-4">
              <%# <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt=""> %>
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-semibold leading-6 text-gray-900">
                  <span class="inset-x-0 -top-px bottom-0"></span>
                  <%= tee_box.tee%>
                </p>
              </div>
            </div>
            <div class="flex shrink-0 items-center gap-x-4">
              <div class="hidden sm:flex sm:flex-col sm:items-end">
                <p class="text-sm leading-6 text-gray-900">Slope: <%= tee_box.slope %></p>
                <p class="mt-1 text-xs leading-5 text-gray-500">Handicap: <%= tee_box.handicap %></p>
              </div>
              <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
              </svg>
            </div>
          </li>
          <% end %>
          
        </ul>
      </section>  
    </div>
  </div>
</main>

