<nav>
  <div class="mx-auto h-16 flex px-4 sm:px-6 py-auto mx-auto justify-center content-center relative">
    <div id="dropdown-container" class="mr-2 mt-4 sm:hidden w-[50px] rounded-tr-lg rounded-tl-lg">
      <button id="burger-btn" class="mx-auto justify-center flex focus:outline-none">     
        <i class="fa-solid fa-bars fa-2xl h-6 h-6 py-auto content-center justify-center mx-auto mt-6 flex" style="color: #EBCB00"></i>    
      </button>

      <div id="dropdown-menu" class="hidden w-3/6 rounded-br-lg rounded-bl-lg rounded-tr-lg absolute z-10 bg-white">
        <% if user_signed_in? %>
          <%= link_to "Announcements", league_announcements_path(current_user.memberships.first.league.announcements.first), class: "block text-base px-4 py-2 text-gray-800 text-black font-bold"%>
          <%= link_to "League Help", league_help_path(current_user.memberships.first.league) , class: "block text-base px-4 py-2 text-gray-800 text-black font-bold"%>
          <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'block text-base px-4 py-2 text-gray-800 text-black font-bold' %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path, class: 'block text-base px-4 py-2 text-gray-800 text-black font-bold' %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'block text-base px-4 py-2 text-gray-800 text-black font-bold' %>
        <% end %>  
        <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Admin Panel", admin_root_path, class: "block text-base px-4 py-2 text-gray-800 text-black font-bold" %>
        <% end %>
      </div>
    </div>
    <div class="-mr-2 flex sm:hidden">
    </div>
    <div class="flex h-16 items-center mx-auto">
      <div class="flex justify-center mx-auto ">
        <div class="flex-shrink-0">
          <a class="brandName" href="/">
            <div class="justify-center mx-auto mt-6 flex"> <%= image_tag("league-hacker-light.svg", class: "w-[280px] pt-3.5 h-fit") %></div>
          </a>
        </div>

      </div>
      <div class="hidden sm:ml-6 sm:block">
          <div class="relative ml-3">
            <div>
              <% if user_signed_in? %>
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'text-white font-bold font-medium' %>
              <% else %>
                <%= link_to 'Log in', new_user_session_path, class: 'text-white font-bold font-medium px-6' %>
                <%= link_to 'Sign up', new_user_registration_path, class: 'text-white font-bold font-medium' %>
              <% end %>      
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>