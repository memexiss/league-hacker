<h1>New Announcement</h1>
<%= form_for([@league, @announcement], url: @announcement.new_record? ? league_announcements_path : league_announcement_path(@announcement), method: @announcement.new_record? ? :post : :patch) do |form| %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
  </div>

  <div>
    <%= form.label :body, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_area :body, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.select :status, League::Announcement.status_select_options, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
  </div>

  <div class="py-6">
    <%= form.submit 'Save Announcement', class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>
